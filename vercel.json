{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(html|js|css|png|jpg|jpeg|gif|svg|ico))$",
      "dest": "/public/$1"
    },
    {
      "src": "/(api|exact-search|search|search-by-line|search-by-ticket|smart-search|recommend|generate-official-response|health|data-sample|append-to-sheet|test-google-sheets|integrations|debug-vercel)(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}